<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFDC35">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center_horizontal"
        android:background="@mipmap/draw">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAÃ‡ SAYISI: "
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="#050505">
        </TextView>
        <Spinner
            android:id="@+id/macSayisi"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:entries="@array/Mac_Sayisi"
            android:prompt="@string/Mac_sayisi_sec"
            android:spinnerMode="dialog"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:gravity="center_horizontal">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAYER 1 NAME: "
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:textColor="#4A17A3">
        </TextView>
        <EditText
            android:id="@+id/plyr1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="7"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:layout_marginLeft="10dp"
            android:textColor="#090909">
            <requestFocus/>
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAYER 2 NAME: "
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:textColor="#4A17A3">
        </TextView>
        <EditText
            android:id="@+id/plyr2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="7"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:textColor="#090909">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnStart"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="START"
            android:layout_marginTop="30dp"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="#F8F8F8"
            android:background="@drawable/new_button_style">
        </Button>
    </LinearLayout>
</LinearLayout>